<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play.game_mode.duel.DuelActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/duel_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1DA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/ll2DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            android:rotation="180">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivA1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="A" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivB1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvB1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="B" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivC1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvC1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="C" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivD1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvD1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="D" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:rotation="180"
                android:text="@string/question_mark"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:rotation="180"
                android:text="@string/equal_sign"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvY1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:rotation="180"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="b" />

            <TextView
                android:id="@+id/tvOperation1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:rotation="180"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="+" />

            <TextView
                android:id="@+id/tvX1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:rotation="180"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="a" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCorrectDA1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:fontFamily="@font/carter_one_regular"
            android:gravity="center"
            android:rotation="180"
            android:textColor="@color/green"
            android:textSize="34sp"
            tools:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2DA"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/ll3DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll1DA">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:progress="10"
            android:progressDrawable="@drawable/my_progressbar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3DA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2DA">

        <TextView
            android:id="@+id/tvCorrectDA2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/carter_one_regular"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="34sp"
            tools:text="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvX2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="a" />

            <TextView
                android:id="@+id/tvOperation2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="+" />

            <TextView
                android:id="@+id/tvY2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="b" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:text="@string/equal_sign"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/primaryColor1"
                android:fontFamily="@font/carter_one_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                tools:text="@string/question_mark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivA2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="A" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivB2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvB2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="B" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivC2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvC2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="C" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivD2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/b_2" />

                    <TextView
                        android:id="@+id/tvD2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carter_one_regular"
                        android:textColor="@color/red"
                        android:textSize="23sp"
                        tools:text="D" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>